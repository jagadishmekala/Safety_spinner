<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/DashBoardTextColor"
            android:textSize="18sp"
            android:layout_margin="@dimen/margin10dp"
            android:text="ITEM 1"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spin_vertical_create"
            android:layout_margin="10dp"
            android:padding="@dimen/margin10dp"
            android:background="@drawable/spinner_border_rect"
            android:layout_height="40dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spin_hazardtype_create"
            android:layout_margin="10dp"
            android:padding="@dimen/margin10dp"
            android:background="@drawable/spinner_border_rect"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spin_risktype_create"
            android:layout_margin="10dp"
            android:padding="@dimen/margin10dp"
            android:background="@drawable/spinner_border_rect"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spin_category_create"
            android:layout_margin="10dp"
            android:padding="@dimen/margin10dp"
            android:background="@drawable/spinner_border_rect"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:textColor="@color/DashBoardTextColor"
            android:text="Brief Description"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:textColor="@color/DashBoardTextColor"
            android:text="Injury that could have happend"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:textColor="@color/DashBoardTextColor"
            android:text="Corrective Action"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:textColor="@color/DashBoardTextColor"
            android:text="Preventive Action"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:textColor="@color/DashBoardTextColor"
            android:text="SubContractor"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Photos/Videos/Documents"
                android:layout_weight="1.2"
                android:drawableRight="@drawable/baseline_add_24"
                android:textSize="@dimen/margin20dp"
                android:textStyle="bold"
                android:textColor="@color/DashBoardTextColor"/>
            <!--                <TextView-->
            <!--                    android:layout_width="30dp"-->
            <!--                    android:layout_height="30dp"-->
            <!--                    android:background="@drawable/baseline_add_24"/>-->

        </LinearLayout>
        <TextView
            android:id="@+id/uploaddatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:text="File Size must not exceed than 3MB \n only .pdf,.zip,.gif,.png,.jpg,.jpeg files are accepted"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploaddatashow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>