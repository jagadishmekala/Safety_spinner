<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_margin="@dimen/margin30dp"
    android:padding="@dimen/margin10dp"
    android:background="@drawable/rectangle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hazarardicon"
            android:src="@mipmap/ic_hazard_reporting"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/hazarardicon"
            android:text="HAZARD"/>
        <ImageView
            android:id="@+id/close_hazard"
            android:layout_width="@dimen/margin30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hazardAnswer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unsafe_condition"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unsafe_act"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pleasereportyourobservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin20dp"
        android:clickable="true"
        android:background="@drawable/homehazardbutton"
        android:text="PLEASE REPORT YOUR OBSERVATION"
        android:textColor="@android:color/white" />





</LinearLayout>